<div id="content" class="uk-container uk-container-expand uk-padding-small" data-root="content">

	<div class="uk-card uk-card-default uk-padding-small uk-margin-bottom
		uk-width-1-1@s
		uk-width-1-2@m
		uk-width-1-3@l
		uk-width-1-4@xl
	">
		<ul class="uk-iconnav uk-margin-remove-bottom">
			<li><a uk-icon="icon: plus; ratio: 2" title="Add Widget" uk-tooltip data-el="add"></a></li>
			<li><a uk-icon="icon: check; ratio: 2" title="Save Layout" uk-tooltip data-el="save"></a></li>
			<li><a uk-icon="icon: close; ratio: 2" title="Delete All" uk-tooltip data-el="deleteAll"></a></li>
			<li><a  uk-icon="icon: arrow-up; ratio: 2" title="Min All" uk-tooltip data-el="minAll"></a></li>
			<li><a uk-icon="icon: arrow-down; ratio: 2" title="Max All" uk-tooltip data-el="maxAll"></a></li>
			<li><a uk-icon="icon: shrink; ratio: 2" title="Shrink All" uk-tooltip data-el="shrinkAll"></a></li>
			<li><a uk-icon="icon: expand; ratio: 2" title="Expand All" uk-tooltip data-el="expandAll"></a></li>
		</ul>
	</div>
	
	<div class="
			uk-grid-small
			uk-child-width-1-1@s
			uk-child-width-1-2@m
			uk-child-width-1-3@l
			uk-child-width-1-4@xl
			uk-text-center
		"
		uk-grid=""
		data-el="widgets">
	</div>
</div>

