<div id="content" class="uk-container uk-container-expand uk-padding-small" data-root="content">

<!-- uk-width-1-1@s
		uk-width-1-2@m
		uk-width-1-3@l
		uk-width-1-4@xl -->
	<div class="uk-card uk-card-default uk-padding-small uk-margin-bottom
		
		uk-child-width-1-2@s uk-child-width-1-3@m
	" uk-grid>
		<div>
			<a uk-icon="icon: plus; ratio: 2" title="Add Widget" uk-tooltip data-el="add"></a>
			<a uk-icon="icon: check; ratio: 2" title="Save Layout" uk-tooltip data-el="save"></a>
		</div>
		
		<div>
			<a uk-icon="icon: close; ratio: 2" title="Delete All" uk-tooltip data-el="deleteAll"></a>
			<a  uk-icon="icon: arrow-up; ratio: 2" title="Min All" uk-tooltip data-el="minAll"></a>
			<a uk-icon="icon: arrow-down; ratio: 2" title="Max All" uk-tooltip data-el="maxAll"></a>
			<a uk-icon="icon: shrink; ratio: 2" title="Shrink All" uk-tooltip data-el="shrinkAll"></a>
			<a uk-icon="icon: expand; ratio: 2" title="Expand All" uk-tooltip data-el="expandAll"></a>
		</div>
		
		<div>
			<label class="uk-width-1-3">Auto refresh <input type="checkbox" data-el="autoref" /></label>
			<label>every <input type="number" class="uk-input uk-form-small uk-width-1-6" /></label>
			<select class="uk-select uk-form-small uk-width-1-5">
				<option>Second</option>
				<option>Minute</option>
			</select>(s)
		</div>
	</div>
	
	<div class="
			uk-grid-small
			uk-child-width-1-1@s
			uk-child-width-1-2@m
			uk-child-width-1-3@l
			uk-child-width-1-4@xl
			uk-text-center
		"
		uk-grid=""
		data-el="widgets">
	</div>
</div>

